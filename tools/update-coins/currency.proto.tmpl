syntax = "proto3";

package orca.core;

// Pair of currency symbols.
// Used to identify markets eq. `BTC/USD`
message CurrencyPair {
    Currency quote = 1;
    Currency base = 2;
}

// Volume of a specified currency.
message CurrencyVolume {
    Currency currency = 1;
    uint64 amount = 2;
}

// Currency
enum Currency {
    // None
    NONE = 0;
    // Euro
    EUR = 1;
    // United States Dollar
    USD = 2;{{range $k, $v := .}}
    // {{$v.Name}}
    {{$v.Symbol}} = {{$v.Num}};{{end}}
}
